#include <stdio.h>

int main()
{
   int a[10],b,c;
   printf("enter the number of array:");
   scanf("%d",&b);
   printf("enter %d number: ",b);
   for(c=0;c<b;c++)
   scanf("%d",&a[c]);
   printf("the array value is:");
   for(c=0;c<b;c++)
   printf(" %d",a[c]);
   printf("\nthe array reverse value is:");
   for(c=b-1;c>=0;c--)
   printf(" %d",a[c]);
   return 0;
}
